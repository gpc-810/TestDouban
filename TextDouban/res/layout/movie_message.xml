<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center_vertical"
    android:padding="10dp"
    >
    
    <ImageView 
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:id="@+id/movie_message_img"
        android:src="@drawable/ic_launcher"
        />

    <LinearLayout
        android:id="@+id/movie_message_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/movie_message_img"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movie_message_img"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/movie_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345679" />

        <TextView
            android:id="@+id/movie_message_pingfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345679" />

        <TextView
            android:id="@+id/movie_message_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345679" />

        <TextView
            android:id="@+id/movie_message_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345679" 
            android:layout_weight="2"/>
    </LinearLayout>

</RelativeLayout>
