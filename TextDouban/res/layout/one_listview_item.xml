<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneactivity_movie_name"
        android:text="让子弹飞一会"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneactivity_movie_pingfen"
        android:layout_below="@id/oneactivity_movie_name"
        android:text="9.8"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oneactivity_movie_year"
        android:layout_below="@id/oneactivity_movie_pingfen"
        android:text="2010"
        />

    <ImageView
        android:id="@+id/oneactivity_movie_img"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
         />

</RelativeLayout>
